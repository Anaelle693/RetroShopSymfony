    <div class="blocarticle">
    {% for article in articles %}
    <div class="article">
        <div class="top">
            <h2 class="articlename">{{ article.name }}</h2>
            <p class="articleinfolabel">Info</p>
            <h3 class="articleinfos">{{ article.infos }}</h3>
        </div>
        
        <div class="testpic">
            <img src="{{ vich_uploader_asset(article, 'imageFile', 'App\\Entity\\Article') }}" alt="{{ article.name }}">
        </div>

        <div class="bottom">
            <div class="price">
                <p class="pricelabel">price</p>
                <p class="itemprice">{{ article.price }}â‚¬</p> 
            </div>
            <div class="actions">
                <a id="actions-show" href="{{ path('article_show', {'id': article.id}) }}">Show</a>
                {% if app.user %}
                <a id="actions-add" href="{{ path('cart_add', {'id': article.id}) }}">Ajout panier</a>
                {% else %}
                <a id="actions-add" href="{{ path('app_login', {'id': article.id}) }}">Ajout panier</a>
                {% endif %}
                <a id="actions-edit" href="{{ path('article_edit', {'id': article.id}) }}">Edit</a>
                
            </div>
        </div>
    </div>
    {% else %}
        <p>no records found</p>  
    {% endfor %}
    </div>

    <div class="navigation">
            {{ knp_pagination_render(articles) }}
    </div>
    <a href="{{ path('article_new') }}">Create new article</a>
    </div>
{% endblock %}
