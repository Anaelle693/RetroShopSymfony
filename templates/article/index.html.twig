{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1 class="chang">Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Infos</th>
                <th>Price</th>
                <th>Pic</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
              <div class="search">
            <form action="/article/search" method="POST">
                <input name="terme" type="text" placeholder="Que Cherches-tu ?">
                <button type="submit"><i class="fas fa-search"></i>search</button>
            </form>
        </div>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.name }}</td>
                <td>{{ article.infos }}</td>
                {# <td><img src="{{ article.pic }}"/></td> #}
                <td>{{ article.price }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                    {% if app.user %}
                    <a href="{{ path('cart_add', {'id': article.id}) }}">add</a>
                    {% else %}
                    <a href="{{ path('app_login', {'id': article.id}) }}">add</a>
                    {% endif %}
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
            {{ knp_pagination_render(articles) }}
    </div>
    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
