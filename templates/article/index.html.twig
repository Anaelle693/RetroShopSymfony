{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
<h1>Tous les produits</h1>

    <div class="produits">
        {% for article in articles %}
            <div class="prod">
                <h3>{{ article.name }}</h3>
                <p>{{ article.infos }}</p>
                <img src="{{ article.pic }}"/>
                <p><strong>{{ article.price }}€</strong></p>
            
                <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
            {% if app.user.roles[1] is defined %}
                {% if app.user.roles[1] %}
                <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                {% endif %}
            {% endif %}
            
            {% if app.user %}
            <a href="{{ path('cart_add', {'id': article.id}) }}">add</a>
            {% else %}
            <a href="{{ path('app_login', {'id': article.id}) }}">add</a>
            {% endif %}
            </div>
            
        {% else %}
            <p>Aucun article trouvé</p>
        {% endfor %}
        
    </div>
<div class="navigation">
    {{ knp_pagination_render(articles) }}
</div>

{% if app.user.roles[1] is defined%}
    {% if app.user.roles[1] %}
    <a href="{{ path('article_new') }}">Create new</a>
    {% endif %}
{% endif %}

{% endblock %}