            <th>CP</th>
            <th>Ville</th>
            <th>Phone</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.username }}</td>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            <td>{{ user.password }}</td>
            <td>{{ user.nom }}</td>
            <td>{{ user.prenom }}</td>
            <td>{{ user.genre }}</td>
            <td>{{ user.dateNaissance ? user.dateNaissance|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ user.adress }}</td>
            <td>{{ user.CP }}</td>
            <td>{{ user.ville }}</td>
            <td>{{ user.phone }}</td>
            <td>
                <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="13">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('user_new') }}">Create new</a>
